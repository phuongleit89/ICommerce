<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="ple">
        <createTable tableName="audit"
                     remarks="A table to contain all audit information">
            <column name="key" type="bigint">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="action_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="input_description" type="varchar(1)">
            </column>
            <column name="created_at" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="02" author="ple">
        <addAutoIncrement tableName="audit"
                          columnDataType="bigint"
                          columnName="key"/>
    </changeSet>

</databaseChangeLog>